<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redcontagio1"
    tools:context=".HospitalMain">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="381dp"
        android:layout_height="59dp"
        android:layout_marginTop="500dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_UsersContagiados"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:text=" Usuarios Positivos"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_consultarS"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Consultar"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_reporte"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Generar Reporte"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_salirS"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sign Out"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="322dp"
        android:layout_height="430dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <ListView
            android:id="@+id/list_usersContagiados"
            android:layout_width="336dp"
            android:layout_height="441dp"
            android:background="#A4FFFFFF"
            android:visibility="invisible">

        </ListView>
    </LinearLayout>

    <EditText
        android:id="@+id/txt_consulS"
        android:layout_width="320dp"
        android:layout_height="61dp"
        android:background="#88FFFFFF"
        android:hint="Fecha "

        android:shadowColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_searchS"
        android:layout_width="59dp"
        android:layout_height="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@android:drawable/ic_menu_search"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>