<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersData">

    <EditText
        android:id="@+id/emailText"
        android:layout_width="252dp"
        android:layout_height="32dp"
        android:layout_marginTop="44dp"
        android:editable="false"
        android:hint="email"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="252dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:hint="name"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <EditText
        android:id="@+id/cedulaText"
        android:layout_width="252dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:hint="C.C"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <EditText
        android:id="@+id/edadText"
        android:layout_width="252dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:hint="edad"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cedulaText" />

    <EditText
        android:id="@+id/phoneText"
        android:layout_width="252dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:hint="telefono"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edadText" />

    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/fui_idp_button_background_anonymous"
        android:text="Confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_group" />

    <RadioGroup
        android:id="@+id/btn_group"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneText">

        <RadioButton
            android:id="@+id/btn_user"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Usuario" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:text="Eps" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>